{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "brace-style": ["error", "stroustrup", { "allowSingleLine" : true }],
    "indent": ["error", 2],
    "no-bitwise": "off",
    "no-plusplus": "off",
    "comma-dangle": "off",
    "linebreak-style": "off",
    "dot-notation": "off",
    "no-param-reassign": ["error", { "props": false }],
    "no-fallthrough": "warn",
    "max-len": ["warn", 80]
  },
  "globals": {
    "addOverlayListener": false,
    "removeOverlayListener": false,
    "callOverlayHandler": false,
    "startOverlayEvents": false
  }
}
